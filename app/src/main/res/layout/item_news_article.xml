<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/margin_padding_size_small"
    app:cardCornerRadius="@dimen/margin_padding_size_small"
    android:layout_marginRight="@dimen/margin_padding_size_medium"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="@dimen/item_news_article_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/news_article_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="@dimen/item_news_article_width"
                android:layout_height="@dimen/item_news_article_width"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/margin_padding_size_small"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>